<Window x:Class="ProjetoBiblioteca.View.frmPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Principal" Height="300" Width="430.667">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="241*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="423">
            <MenuItem Header="Cadastrar" Height="28" Click="MenuItem_Click">
                <MenuItem x:Name="menCadastrarCliente" Header="Cliente" HorizontalAlignment="Left" Width="140" Click="menCadastrarCliente_Click" />
                <MenuItem x:Name="menCadastrarFuncionario" Header="Funcionario" HorizontalAlignment="Left" Width="153" Margin="0,0,-13,0" Click="menCadastrarFuncionario_Click"/>
                <MenuItem x:Name="menCadastrarBiblioteca" Header="Biblioteca" HorizontalAlignment="Left" Width="140" Click="menCadastrarBiblioteca_Click"/>
                <MenuItem x:Name="menCadastrarLivro" Header="Livro" HorizontalAlignment="Left" Width="140" Click="menCadastrarLivro_Click"/>
            </MenuItem>
            <MenuItem Header="Consultar" Width="62" Height="28"/>
        </Menu>

    </Grid>
</Window>
